<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="test-webapp-db" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		
		<non-jta-data-source>test-webapp-db</non-jta-data-source>
		
		<class>au.com.ibm.webapp.model.relational.AppUser</class>
		<class>au.com.ibm.webapp.model.relational.Message</class>
		<class>au.com.ibm.webapp.model.relational.FileData</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			 
			<!--
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.ouput-mode" value="database" />
			-->
			<property name="javax.persistence.schema-generation.create-database-schemas" value="true"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="eclipselink.weaving" value="false"/>
			<!-- 
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:multiverse-db"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			-->
		</properties>
	</persistence-unit>
</persistence>
